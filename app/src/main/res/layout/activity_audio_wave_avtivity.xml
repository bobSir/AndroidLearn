<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="learn.bob.com.androidlearn.audioWave.AudioWaveActivity">

    <learn.bob.com.androidlearn.audioWave.WaveStaticView
        android:id="@+id/wavesfv"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <learn.bob.com.androidlearn.audioWave.WaveGroupView
        android:id="@+id/wave_group"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <learn.bob.com.androidlearn.audioWave.LineView
            android:id="@+id/line_start"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            app:line_type="start"/>

        <learn.bob.com.androidlearn.audioWave.LineView
            android:id="@+id/line_play"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            app:line_type="play"/>

        <learn.bob.com.androidlearn.audioWave.LineView
            android:id="@+id/line_end"
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            app:line_type="end"/>

    </learn.bob.com.androidlearn.audioWave.WaveGroupView>


    <learn.bob.com.androidlearn.audioWave.WaveView
        android:id="@+id/wv"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/wavesfv"/>

    <Button
        android:id="@+id/btn_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="start"
        android:text="开始静态WaveView"
        app:layout_constraintTop_toBottomOf="@+id/wv"/>

    <Button
        android:id="@+id/btn_start_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="startView"
        android:text="开始View"
        app:layout_constraintTop_toBottomOf="@+id/wv"/>

    <Button
        android:id="@+id/btn_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="testViewGroup"
        android:text="开始ViewGroup"
        app:layout_constraintTop_toBottomOf="@+id/wv"/>

    <Button
        android:id="@+id/btn_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="testView"
        android:text="测试"
        app:layout_constraintTop_toBottomOf="@+id/btn_group"/>


</LinearLayout>
