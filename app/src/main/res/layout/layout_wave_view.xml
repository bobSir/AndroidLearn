<?xml version="1.0" encoding="utf-8"?>
<com.bobLearn.audioWave.WaveGroupView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <com.bobLearn.audioWave.WaveBacView
        android:id="@+id/wv_bac"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="9dp"
        android:layout_marginBottom="20dp"/>

    <com.bobLearn.audioWave.WaveStaticView
        android:id="@+id/wv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

    <include layout="@layout/play_line_view"/>

    <include layout="@layout/start_line_view"/>

    <include
        layout="@layout/end_line_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"/>
</com.bobLearn.audioWave.WaveGroupView>